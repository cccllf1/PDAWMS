<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <!-- 统一导航栏容器 -->
    <LinearLayout
        android:id="@+id/navBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!-- 页面内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- 商品输入区 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editProductCode"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="扫码或输入商品编码"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="#F0F0F0"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnConfirmProduct"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="确认"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="#007AFF"
                android:paddingHorizontal="20dp" />

        </LinearLayout>

        <!-- 入库清单标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txtInboundTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="入库商品(0)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50" />

            <Button
                android:id="@+id/btnConfirmInbound"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="确认入库"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="#007AFF"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="12dp"
                android:enabled="false" />

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/editLocationInput"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:hint="无货位"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="#F8F9FA"
                android:completionThreshold="1" />

        </LinearLayout>

        <!-- 入库清单 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerInboundList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="8dp" />

        <!-- 底部空白区域 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout> 