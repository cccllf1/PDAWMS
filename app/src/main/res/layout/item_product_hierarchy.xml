<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- 产品图片 -->
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/card_background_with_border" />

        <!-- 产品信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 产品名称和库存徽章 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="产品名称"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtStockBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge_background_blue"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:minWidth="24dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- 搜索类型 -->
            <TextView
                android:id="@+id/txtSearchType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索类型"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <!-- 产品代码 -->
            <TextView
                android:id="@+id/txtProductCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品代码: 000000"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />

            <!-- 颜色数量 -->
            <TextView
                android:id="@+id/txtColorCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色: 0种"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- 展开图标 -->
        <ImageView
            android:id="@+id/expandIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 